<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@color/white"
                android:src="@drawable/signup" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up As Donor"
                android:fontFamily="serif"
                android:id="@+id/loginText"
                android:textSize="26sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blue1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/uname"
                android:fontFamily="serif"
                android:textSize="12sp"
                android:background="@drawable/new_edittext"
                android:drawableLeft="@drawable/baseline_supervised_user_circle_24"
                android:drawablePadding="8dp"
                android:hint="Name"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:fontFamily="serif"
                android:textSize="12sp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/new_edittext"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/phone"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:fontFamily="serif"
                android:textSize="12sp"
                android:background="@drawable/new_edittext"
                android:drawableLeft="@drawable/baseline_phone_24"
                android:drawablePadding="8dp"
                android:hint="Phone Number"
                android:padding="8dp"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                android:background="@drawable/new_edittext"
                android:drawableLeft="@drawable/baseline_house_24"
                android:drawablePadding="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="serif"
                android:hint="Full Address (Apartment Name, Post, Local body, District)"
                android:padding="8dp"
                android:textSize="12sp"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:maxLines="6"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/pin"
                android:background="@drawable/new_edittext"
                android:fontFamily="serif"
                android:textSize="12sp"
                android:inputType="phone"
                android:drawableLeft="@drawable/baseline_add_location_24"
                android:drawablePadding="8dp"
                android:hint="Pincode"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="15dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/pwd"
                android:background="@drawable/new_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:fontFamily="serif"
                android:textSize="12sp"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:padding="8dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/cpwd"
                android:background="@drawable/new_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:fontFamily="serif"
                android:textSize="12sp"
                android:drawablePadding="8dp"
                android:hint="Confirm Password"
                android:padding="8dp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="15dp"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/signup"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/blue1"
                app:cornerRadius = "15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already a User?"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:text="@string/login"
                    android:fontFamily="serif"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:id="@+id/log"
                    android:textColor="@color/link"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>